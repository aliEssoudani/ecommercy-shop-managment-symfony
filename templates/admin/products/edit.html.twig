{% extends 'baseAdmin.html.twig' %}
{% block body %}
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <div class="header-body" style="text-align: center">
                <h1 style="color: white"> edit Products </h1>
            </div>
        </div>
    </div><br>
    <div class="row">
        <div class="col-md-6 mx-auto">
            {{ form_start(form) }}
            {{ form_widget(form.name,  {'attr': {'class' : "form-control", 'placeholder': 'Enter Name'}}) }}
            {{ form_widget(form.price, {'attr': {'class' : "form-control", 'placeholder': 'Enter price'}}) }}
            <select class="custom-select" id="inputGroupSelect01" name="categories" >

                <option selected name="title">{{ cat }}</option>
                {% for c in categories %}
                    <option value={{ c.id }} >{{ c.title }}</option>
                {% endfor%}
            </select>

            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-block"> Update</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
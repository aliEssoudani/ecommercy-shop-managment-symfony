{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div class="container-fluid">
            <div class="header-body" style="text-align: center">
                <h1 style="color: white">Expenses </h1>
            </div>
        </div>
    </div>

    <div class="container-fluid mt--7">
        <!-- Table -->
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-md-9">
                                <h3 class="mb-0">Expenses</h3>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control " placeholder="Search Table" id="contact-filter">
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive" id="categoriesTable">
                        <table class="table align-items-center table-flush tablesorter tablepager">
                            <thead class="thead-light">

                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">Ammount</th>
                                <th scope="col">CreationDate</th>
                                <th scope="col">Store</th>
                                <th scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody id="categoriesBody">

                            <!-- Loop -->
                            {% for key,expense in expenses %}
                                <tr>
                                    <td>
                                        {{ expense.title }}
                                    </td>
                                    <td>
                                        {{ expense.description }}
                                    </td>
                                    <td>
                                        {{ expense.amount  }}
                                    </td>
                                    <td>
                                        {{ expense.creationDate | date  }}
                                    </td>
                                    <td>
                                        {{ expense.stores }}
                                    </td>
                                    <td >

                                        <a href="{{ path('expenses_edit', {'id': expense.id}) }}"  class="badge badge-info">edit</a>
                                        <a href="{{ path('expenses_delete', {'id': expense.id}) }}"  class="badge badge-danger">delete</a>

                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            <!-- End Loop -->
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer py-4">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <span class="btn-inner--icon"><a class="btn btn-icon btn-3 btn-primary" type="button" style="margin-top: 2em"
                                     href="{{ path('expenses_new') }}"><i class="ni ni-fat-add"></i>Add New expense</a></span>

{% endblock %}